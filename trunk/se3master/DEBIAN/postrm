#! /bin/sh
# postrm script for smbedu
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <r>overwrit>r> <new-version>
# for details, see /usr/doc/packaging-manual/

case "$1" in
       remove|abort-install)
	(
	dpkg-divert --package se3 --remove --rename --divert /etc/.cron_mrtg.divert /etc/cron.d/mrtg 
	dpkg-divert --package se3 --remove --rename --divert /etc/mrtg.cfg.divert /etc/mrtg.cfg
	dpkg-divert --package se3 --remove --rename --divert /usr/share/backuppc/image/BackupPC_stnd.css.divert /usr/share/backuppc/image/BackupPC_stnd.css 
	dpkg-divert --package se3 --remove --rename --divert  /etc/ldap/slapd.conf.divert /etc/ldap/slapd.conf 
	dpkg-divert --package se3 --remove --rename --divert /etc/backuppc/config.pl.divert /etc/backuppc/config.pl 
	dpkg-divert --package se3 --remove --rename --divert /etc/backuppc/apache.conf.divert /etc/backuppc/apache.conf
	dpkg-divert --package se3 --remove --rename --divert  /etc/backuppc/localhost.pl.divert  /etc/backuppc/localhost.pl 
	dpkg-divert --package se3 --remove --rename --divert /usr/share/backuppc/lib/BackupPC/CGI/Lib.pm.divert /usr/share/backuppc/lib/BackupPC/CGI/Lib.pm 
	dpkg-divert --package se3 --remove --rename --divert  /etc/ssmtp/ssmtp.conf.divert  /etc/ssmtp/ssmtp.conf 
	dpkg-divert --package se3 --remove --rename --divert  /etc/php5/apache2/php.ini.divert /etc/php5/apache2/php.ini 
	dpkg-divert --package se3 --remove --rename --divert /etc/php5/cli/php.ini.divert /etc/php5/cli/php.ini
	dpkg-divert --package se3 --remove --rename --divert /etc/default/apache2.divert  /etc/default/apache2 
	dpkg-divert --package se3 --remove --rename --divert /etc/cups/mime.convs.divert  /etc/cups/mime.convs 
	dpkg-divert --package se3 --remove --rename --divert /etc/cups/mime.types.divert  /etc/cups/mime.types 
	dpkg-divert --package se3 --remove --rename --divert /etc/syslog.conf.divert /etc/syslog.conf 
	dpkg-divert --package se3 --remove --rename  /etc/samba/smb.conf.divert  /etc/samba/smb.conf 
	dpkg-divert --package se3 --remove --divert  /etc/ldap/ldap.conf.divert /etc/ldap/ldap.conf 
	dpkg-divert --package se3 --remove --divert  /etc/nsswitch.conf.divert /etc/nsswitch.conf 
	dpkg-divert --package se3 --remove --divert  /etc/pam_ldap.conf.divert /etc/pam_ldap.conf 
	dpkg-divert --package se3 --remove --divert  /etc/libnss-ldap.conf.divert /etc/libnss-ldap.conf 
	) >/dev/null
        ;;

    *)
        exit 0

esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.
